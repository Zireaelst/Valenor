{
  "name": "valenor-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Valenor - Decentralized Autonomous Social Fund",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:usdc:sepolia": "hardhat run scripts/deployTestUSDC.ts --network sepolia",
    "deploy:usdc:local": "hardhat run scripts/deployTestUSDC.ts --network localhost",
    "deploy:fund:sepolia": "hardhat run scripts/deployFund.ts --network sepolia",
    "deploy:fund:local": "hardhat run scripts/deployFund.ts --network localhost",
    "deploy:governance:sepolia": "hardhat run scripts/deployGovernance.ts --network sepolia",
    "deploy:governance:local": "hardhat run scripts/deployGovernance.ts --network localhost",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:usdc": "hardhat verify --network sepolia <USDC_ADDRESS>",
    "verify:fund": "hardhat verify --network sepolia <FUND_ADDRESS> <USDC_ADDRESS>",
    "verify:gov": "hardhat verify --network sepolia <GOV_ADDRESS> <FUND_ADDRESS>",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "check:balance": "hardhat run scripts/checkBalance.js --network sepolia",
    "estimate:gas": "hardhat run scripts/estimateGas.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "keywords": [
    "solidity",
    "hardhat",
    "defi",
    "dao",
    "social-fund"
  ],
  "author": "Valenor Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "chai": "^4.5.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0"
  }
}
